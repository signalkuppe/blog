{# 
# Prev and next post
# @param {Object} prev - the previous post
# @param {Object} next - the next post
#}

{% macro prevNext(prev, next ) %}
<nav>
  <ul class="c-post-prevNext">
    {% if prev %}
    <li>
      <a href="{{ prev.url | url }}" title="{{ prev.date | formatDate('DD MMMM YYYY') }} - {{ prev.title }}">{% include 'icons/chevron-left.njk' %} Precedente</a>
    </li>
    {% endif %}
    {% if next and prev %}
    <li aria-hidden="true">|</li>
    {% endif %}
    {% if next %}
    <li>
      <a href="{{ next.url | url }}" title="{{ next.date | formatDate('DD MMMM YYYY') }} - {{ next.title }}">Successivo {% include 'icons/chevron-right.njk' %}</a>
    </li>
    {% endif %}
  </ul>
</nav>
{% endmacro %}


{# 
# Post card
# @param {Object} post - the post data
#}

{% macro card(post) %}
  {% set dateSlug %}{{ post.data.date | formatDate('DDMMYY') }}{% endset %}
  <article class="c-card" itemscope itemtype="http://schema.org/Article">
    <figure class="c-card-image">
      <img 
        class="lazyImg"
        data-src="{{ cloudinaryImageUrl(post.data.cover.id, 'w_500,h_333,c_fill,f_auto,q_60') }}" 
        alt="{{ post.data.title }}" />
    </figure>
    <div class="c-card-body">
      <header class="c-card-header">
        <time datetime="{{ post.data.date | formatDate('YYYY-MM-DD') }}" itemprop="datePublished">{{ post.data.date | formatDate('DD MMMM YYYY') }}</time>
        <h2 class="c-card-title">{{ post.data.title }}</h2>
      </header>
      <p>{{ post.data.description }}</p>
    </div>
  </article>
{% endmacro %}