{# Post layout #}
{% import "macros.njk" as macro %}
{% set postCoverId %}blog/covers/{{ date | formatDate('DDMMYY') }}{% endset %}
{{ macro.docType() }}
{{ macro.htmlTag() }}
  <head>
    {{ macro.commonMeta() }}
    {{ macro.favicons() }}
    {{ macro.socialMeta(title, description, postCoverId) }}
    {{ macro.canonical(page.url) }}
    {{ macro.metaTitle(title, info.slogan) }}
    {{ macro.css() }}
  </head>
  <body>
    <header class="l-cover-header">
     {{ macro.header(activeSection = 'blog') }}
    </header>
    <main class="l-cover-main">
      <div class="l-cover-left">
        <figure class="l-cover-figure">
          <img class="" src="{{ macro.coverImage(postCoverId, version, crop)  }}" />
          <figcaption class="l-cover-caption">
            {{ macro.coverCaption(title, caption, date)}}
          </figcaption>
        </figure>
      </div>
      <div id="main" class="l-cover-right">
        <article class="l-cover-content" itemscope itemtype="http://schema.org/Article">
          <header id="pageHeader">
            <h1>{{ title }}</h1>
            <time datetime="{{ date }}" itemprop="datePublished">{{ date | formatDate('DD MMMM YYYY') }}</time>
            <span itemprop="author" itemscope itemtype="http://schema.org/Person"  class="u-srOnly">
              <span itemprop="name">{% info 'twitter' %}</span>
            </span>
          </header>
          <section itemprop="articleBody">{{ content | safe }}</section>
        </article>
        <aside class="l-cover-complementary">
          <h3>Tracce GPS</h3>
        </aside>
      </div>
    </main>
    <script src="/node_modules/stickybits/dist/stickybits.js"></script>
    <script src="/js/menu.js"></script>
    <script src="/js/pageHeader.js"></script>
  </body>
</html>

