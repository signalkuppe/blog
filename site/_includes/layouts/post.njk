{# Post layout #}
{% import "macros.njk" as macro %}
{{ macro.docType() }}
{{ macro.htmlTag() }}
  <head>
    {{ macro.commonMeta() }}
    {{ macro.favicons() }}
    {{ macro.socialMeta(title, description, date | dateFolder) }}
    {{ macro.canonical(page.url) }}
    {{ macro.metaTitle(title, info.slogan) }}
    {{ macro.css() }}
  </head>
  <body>
    {{ content | safe }}
  </body>
</html>

