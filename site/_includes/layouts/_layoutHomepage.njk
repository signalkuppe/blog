{# Base layout #}
{% import "macros/macros.njk" as macro with context %}
{{ macro.docType() }}
{{ macro.htmlTag() }}
  <head>
    {{ macro.commonMeta() }}
    {{ macro.favicons() }}
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    {% block head %}{% endblock %}
    {{ macro.css() }}
  </head>
  <body id="top" class="l-homepage">
    <a href="#main" class="u-srOnly">Vai al contenuto principale</a>
    <header class="l-homepage-header u-section-mt-0-5">
      {% block header %}{% endblock %}
    </header>
    <main id="main" class="l-homepage-main">
      <aside class="l-homepage-image">{% block image %}{% endblock %}</aside>
      <section class="l-homepage-content">{% block content %}{% endblock %}</section>
    </main>
    <footer class="l-homepage-footer">
      {% block footer %}{% endblock %}
    </footer>      
    {% block scripts %}{% endblock %}
  </body>
</html>