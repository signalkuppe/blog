{# Base layout #}
{% import "macros.njk" as macro %}
{{ macro.docType() }}
{{ macro.htmlTag() }}
  <head>
    {{ macro.commonMeta() }}
    {{ macro.favicons() }}
    {% block head %}{% endblock %}
    {{ macro.css() }}
  </head>
  <body id="top">
    <a href="#content" class="u-srOnly">Vai al contenuto principale</a>
    <div class="l-base">
      <section class="l-base-header">
        {% block header %}{% endblock %}
      </section>
      <section id="main" class="l-base-main">
        <main>{% block content %}{% endblock %}</main>
      </section>
      <section class="l-base-footer">
        {% block footer %}{% endblock %}
      </section>      
    </div>
    {% block scripts %}{% endblock %}
  </body>
</html>

