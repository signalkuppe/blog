---
pagination:
  data: posts
  size: 1
  alias: post
permalink: "{{ post.computed.slug }}"
---

{# Post layout, extends base #}
{% extends "layouts/_layoutBase.njk" %}
{% import "macros/macros.njk" as macro with context %}

{# head #}
{% block head %}
{% set ogImage %}{{ post.fields.cover.fields.file.url }}?fit=thumb&w=400&h=400&f=center{% endset %}
{{ macro.socialMeta(post.fields.title, post.fields.description, ogImage) }}
{{ macro.canonical(page.url) }}
{{ macro.metaTitle(post.fields.title, env.ELEVENTY_NAME) }}
<link rel="preconnect" href="https://assets.ctfassets.net" crossorigin>
{% endblock %}

{# nav #}
{% block header %}
  {{ macro.navigation(activeSection = 'blog') }}
{% endblock %}

{% block main %}
<article itemscope itemtype="http://schema.org/Article" class="c-post">
  {# post header #}
  {% call macro.contentHeader(post.fields.category[0], post.fields.title, post.fields.description) -%}
  <time datetime="{{ post.fields.date | formatDate('YYYY-MM-DD') }}" itemprop="datePublished">{{ post.fields.date | formatDate('DD MMMM YYYY') }}</time>
  <span itemprop="author" itemscope itemtype="http://schema.org/Person"  class="u-srOnly">
    <span itemprop="name">{{ env.ELEVENTY_AUTHOR }}</span>
  </span>
  {%- endcall %}

  {# post cover #}
  <figure class="c-post-cover js-observe js-observe-caption u-section-mt-1">
    <picture>
      <!-- 21:9 -->
      <source
        srcset="{{ post.fields.cover.fields.file.url }}?fit=thumb&w=1440&h=617&q=20&f={{ post.fields.coverCropFocus[0] }}&fm=jpg&fl=progressive" 
        data-srcset="{{ post.fields.cover.fields.file.url }}?fit=thumb&w=3000&h=1280&q=70&f={{ post.fields.coverCropFocus[0] }}&fm=jpg&fl=progressive" 
        media="(orientation: landscape)" />
      <!-- 4:3 -->
      <source 
        srcset="{{ post.fields.cover.fields.file.url }}?fit=thumb&w=800&h=600&f={{ post.fields.coverCropFocus[0] }}&fm=jpg&fl=progressive&q=20"
        data-srcset="{{ post.fields.cover.fields.file.url }}?fit=thumb&w=1440&h=1080&f={{ post.fields.coverCropFocus[0] }}&fm=jpg&fl=progressive&q=70" 
        media="(orientation: portrait)" />
      <img 
        class="lazyImg"
        src="{{ post.fields.cover.fields.file.url }}?fit=thumb&w=800&h=600&f={{ post.fields.coverCropFocus[0] }}&fm=jpg&fl=progressive&q=20"
        data-src="{{ post.fields.cover.fields.file.url }}?fit=thumb&w=1440&h=1080&f={{ post.fields.coverCropFocus[0] }}&fm=jpg&fl=progressive&q=70" 
        alt="{{ post.fields.cover.fields.description  }}" />
    </picture>
    <figcaption class="c-post-cover-caption js-animate-caption">{{ post.fields.cover.fields.title }}</figcaption>
  </figure>

  {# post layout #}
  <section class="l-post u-section-mt-1-5">
    {# content #}
    <section itemprop="articleBody" class="l-post-content u-section-mb-1">
    {{ post.computed.body | safe }}
    <p class="u-printOnly c-post-printMessage"><strong>Grazie per aver stampato questa pagina, buona gita! ðŸ¤Ÿ</strong></p>
    </section>
    {# /content #}
    {# sidebar #}
    <aside class="l-post-sidebar">
      <div class="c-post-sticky">
        {# gps #}
        {% if post.fields.gpsTracks.length %}
        <h3 class="u-mb-1">Scarica le tracce</h3>
        <ul class="c-post-gps u-inline-list">
          {% for track in post.fields.gpsTracks %}
          {% set fileName %}{{ post.fields.date | formatDate('DD-MM-YY') }}-{{ post.fields.title | slug }}{% endset %}
          {% if track.fields.file.contentType === 'application/vnd.google-earth.kml+xml' %}
          <li>
            <a class="c-button" href="{{ track.fields.file.url }}" title="Scarica la traccia .kml per Google Earth" download="{{ fileName }}.kml">{% include 'icons/download.njk' %} Traccia kml</a>
          </li>
          {% endif %}
          {% if track.fields.file.contentType === 'application/octet-stream' or track.fields.file.contentType === 'application/zip'%}
          <li>
            <a class="c-button" href="{{ track.fields.file.url }}" title="Scarica la traccia .gpx" download="{{ fileName }}.gpx">{% include 'icons/download.njk' %} Traccia gpx</a>
          </li>
          {% endif %}
          {% endfor %}
        </ul>
        {% endif %}
        {# /gps #}
        {# social #}
        <h3 class="js-animate-sidebarTitle{% if post.fields.gpsTracks.length %} u-section-mt-1{% endif %} u-mb-1">Condividi</h3>
        <ul class="c-post-share u-inline-list">
          <li>
            <a href="https://www.facebook.com/sharer/sharer.php?u=%2Fescursionismo%2F2019%2F02%2F23%2Fpizzi-di-parlasco%2F" title="Condividi su Facebook" target="_blank" rel="noopener" onclick="window.open('https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(document.URL) + '&amp;quote=' + encodeURIComponent(document.URL)); return false;">
              {% include 'icons/facebook.njk' %}
            </a>
          </li>
          <li>
            <a href="https://twitter.com/intent/tweet?source=%2Fescursionismo%2F2019%2F02%2F23%2Fpizzi-di-parlasco%2F&amp;text=Escursionismo%20ai%20Pizzi%20di%20Parlasco%3A%20salita%20per%20la%20Porta%20di%20Parlasco%20e%20rientro%20ad%20anello%20per%20il%20Passo%20di%20Agueglio&amp;via=signalkuppe" target="_blank" rel="noopener" title="Condividi su Twitter" onclick="window.open('https://twitter.com/intent/tweet?text=' + encodeURIComponent(document.title) + ':%20'  + encodeURIComponent(document.URL))+ ':%20'  +author; return false;">
              {% include 'icons/twitter.njk' %}
            </a>
          </li>
          <li>
            <a href="mailto:?subject=Pizzi%20di%20Parlasco&amp;body=Escursionismo%20ai%20Pizzi%20di%20Parlasco%3A%20salita%20per%20la%20Porta%20di%20Parlasco%20e%20rientro%20ad%20anello%20per%20il%20Passo%20di%20Agueglio" target="_blank" rel="noopener" title="Condividi via mail" onclick="window.open('mailto:?subject=' + encodeURIComponent(document.title) + '&amp;body=' +  encodeURIComponent(document.URL)); return false;">
              {% include 'icons/mail.njk' %}
            </a>
          </li>
        </ul>
        {# /social #}
      </div>
    </aside>
    {# /sidebar #}
  </section>
  <!-- /post layout -->
  {# gallery #}
  <aside class="u-section-mt-2">
    <ul class="c-imageGallery">
      <div class="c-imageGallery-col" aria-hidden="true"></div>
      <div class="c-imageGallery-col" aria-hidden="true"></div>
      <div class="c-imageGallery-col" aria-hidden="true"></div>
      <div class="c-imageGallery-col" aria-hidden="true"></div>
      <div class="c-imageGallery-col" aria-hidden="true"></div>
      {% for photo in post.fields.gallery %}
      <li class="c-imageGallery-item">
        <a href="{{ photo.fields.file.url }}?fit=thumb&w=2560&fm=jpg&fl=progressive" title="{{ photo.fields.title }}">
          <img 
            src="{{ env.ELEVENTY_IMAGE_PLACEHOLDER }}?fit=thumb&w=800&fm=jpg&fl=progressive"
            data-src="{{ photo.fields.file.url }}?fit=thumb&w=800&fm=jpg&fl=progressive" 
            alt="{{ photo.fields.description }}" 
            class="lazyImg u-hide-nojs" />
          <noscript>
            <img 
              src="{{ photo.fields.file.url }}?fit=thumb&w=800&fm=jpg&fl=progressive" 
              alt="{{ photo.fields.description }}"  />        
          </noscript>
        </a>
      </li> 
      {% endfor %}
    </ul>
  </aside>
  {# /gallery #}
  <footer class="c-post-footer u-section-mt-1-5">
    <p class="u-text-center u-section-mb-1"><a href="" title="Stampa" onclick="window.print()" class="c-button">{% include 'icons/print.njk' %} Stampa questa pagina</a></p>
    {# prev-next #}
    <nav class="js-observe js-observe-nav">
      <ul class="c-postNav">
        {% if post.computed.prev %}
        <li>
          <a class="js-animate-prev" href="{{ post.computed.prev.slug }}" title="{{ post.computed.prev.date | formatDate('YYYY-MM-DD') }} - {{ post.computed.prev.title }}">{% include 'icons/chevron-left.njk' %}Post precedente</a>
        </li>
        {% endif %}
        {% if post.computed.prev and post.computed.next %}
        <li aria-hidden="true">|</li>
        {% endif %}
        {% if post.computed.next %}
        <li>
          <a class="js-animate-next" href="{{ post.computed.next.slug }}" title="{{ post.computed.next.date | formatDate('YYYY-MM-DD') }} - {{ post.computed.next.title }}">Post successivo{% include 'icons/chevron-right.njk' %}</a>
        </li>
        {% endif %}
      </ul>
    </nav>
    {# /prev-next #}
    <p class="c-post-newsletter u-section-mt-1 aaaa">Vuoi rimanere aggiornato sui nuovi post? <strong><a href="http://eepurl.com/dgiWQH" class="u-highlight-link"><br>Iscriviti alla newsletter</a></strong></p>
  </footer>
</article>
{% endblock %}

{% block footer %}
{{ macro.footer() }}
{% endblock %}

{% block scripts %}
<script src="/node_modules/gsap/src/uncompressed/TweenMax.js"></script>
<script src="/node_modules/colcade/colcade.js"></script>
<script src="/node_modules/vanilla-lazyload/dist/lazyload.js"></script>
<script src="/node_modules/smooth-scroll/dist/smooth-scroll.js"></script>
<script src="/node_modules/baguettebox.js/dist/baguetteBox.js"></script>
<script src="/node_modules/lockr/lockr.js"></script>
<script src="/js/registerServiceWorker.js"></script>
<script src="/js/darkMode.js"></script>
<script src="/js/postAnimations.js"></script>
<script src="/js/smoothScroll.js"></script>
<script src="/js/currentYear.js"></script>
<script src="/js/lazyImages.js"></script>
<script src="/js/imageGallery.js"></script>
{% endblock %}