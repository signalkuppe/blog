---
import { siteSlogan, defaultOgImage } from "../constants";
import { headPageTitle } from "../lib/utils";
import Image from "astro/components/Image.astro";
import Layout from "../layouts/Layout.astro";
import ReactLogo from "../logos/react.astro";
import StyledComponentLogo from "../logos/styled-components.astro";
import FigmaLogo from "../logos/figma.astro";
import TailwindLogo from "../logos/tailwind.astro";
import Astrologo from "../logos/astrologo.astro";
import ContentfulLogo from "../logos/contentful.astro";
import ClaudeLogo from "../logos/claude.astro";
import OpenAiLogo from "../logos/openai.astro";
import Cover from "../images/matteo-leoni.png";
import PageTitle from "../components/PageTitle.astro";

const tools = [
  {
    text: "Figma",
    icon: FigmaLogo,
    href: "https://figma.com/",
  },
  {
    text: "React",
    icon: ReactLogo,
    href: "https://react.dev/",
  },
  {
    text: "Styled Components",
    icon: StyledComponentLogo,
    href: "https://styled-components.com/",
  },
  {
    text: "Tailwind",
    icon: TailwindLogo,
    href: "https://tailwindcss.com/",
  },
  {
    text: "Astro",
    icon: Astrologo,
    href: "https://astro.build/",
  },
  {
    text: "Contentful",
    icon: ContentfulLogo,
    href: "https://www.contentful.com/",
  },
  {
    text: "Claude Code",
    icon: ClaudeLogo,
    href: "https://claude.com/product/claude-code",
  },
  {
    text: "Codex",
    icon: OpenAiLogo,
    href: "https://codexapp.io/",
  },
];
---

<Layout
