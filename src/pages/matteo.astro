<style media="screen">
  .wrapper {
    display: flex;
    align-items: flex-start;
  }

  article {
    max-width: 50ch;
  }

  @media screen and (width < 70rem) {
    .wrapper {
      flex-direction: column;
      gap: 2rem;
    }
  }

  @media screen and (width > 70rem) {
    .wrapper {
      display: flex;
      flex-direction: row;
      gap: 4rem;
    }

    img {
      order: 2;
      min-width: 0;
      position: sticky;
      top: 7rem;
    }

    article {
      order: 1;
      min-width: 0;
    }
  }

  h2 {
