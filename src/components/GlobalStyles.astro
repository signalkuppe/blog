    --hue: 210;
    --saturation: 50%;
    --lightness: 50%;
    --accent: hsl(var(--hue) 100% 30%);
    --accentHover: hsl(var(--hue) 100% 20%);
    --accentContrastColor: hsl(var(--hue) 100% 100%);
    --text: hsl(var(--hue) calc(var(--saturation) / 4) 75%);
    --textAccent: hsl(var(--hue) var(--saturation) 95%);
