    border-radius: 50px;
    font-size: 90%;
    font-weight: bold;
    color: var(--accentContrastColor);
    line-height: 1;
  }

  .hide-scrollbars {
    -ms-overflow-style: none; /* Internet Explorer 10+ */
    scrollbar-width: none; /* Firefox */
  }
  .hide-scrollbars::-webkit-scrollbar {
    display: none; /* Safari and Chrome */
  }
</style>
