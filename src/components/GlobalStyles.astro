    font-weight: bold;
    color: var(--accentContrastColor);
    line-height: 1;
  }

  .btn:disabled {
    opacity: 0.5;
  }

  .btn:hover {
    background: var(--accentHover);
  }

  .hide-scrollbars {
    -ms-overflow-style: none; /* Internet Explorer 10+ */
    scrollbar-width: none; /* Firefox */
  }
  .hide-scrollbars::-webkit-scrollbar {
    display: none; /* Safari and Chrome */
  }

  .print-only {
    display: none;
  }
