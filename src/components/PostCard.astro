---
import { Image } from "astro:assets";
import { categories } from "../constants";
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"posts">;
  TitleTag?: any;
}

const { post, TitleTag = "h2" } = Astro.props;
const categorySlug = categories.find(
  (cat) => cat.title === post.data.category[0],
)?.slug;
---

<article>
  <Image
    src={post.data.cover.src}
    alt={post.data.cover.alt}
    widths={[100, 150, 200, 400, 600, 800]}
    sizes="(max-width: 30rem) 100px, (max-width: 60rem) 120px, 600px"
    loading="lazy"
    class="post-cover"
  />
  <div class="article-body">
    <time datetime={post.data.date.toISOString().slice(0, 19)}>
      <span class="visually-hidden">Pubblicato il </span>{
        post.data.date.toLocaleDateString("it-IT")
      }
    </time>
    <TitleTag class="title">
      <a href={`/${post.slug}`} class="post-link" data-astro-prefetch
        >{post.data.title}</a
      >
    </TitleTag>
    <p class="abstract">{post.data.description}</p>
    <p>
      <a
        href={`/blog/${categorySlug}`}
        class="category"
        aria-label={`Categoria: ${post.data.category}`}
      >
        <span aria-hidden="true">#</span>{post.data.category}
      </a>
    </p>
  </div>
  <a
    class="card-overlay"
    href={`/${post.slug}`}
    aria-label={`Apri il post ${post.data.title}`}></a>
</article>

<style media="screen">
  article {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    gap: 1rem;
    position: relative;
    z-index: 0;
    isolation: isolate;
    height: 100%;
    border-bottom: 1px solid var(--surfaceAccent);
    padding-bottom: 2rem;
  }

  article .article-body {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    flex: 1;
  }

  article .title {
    font-size: 1.25rem;
    line-height: 1.25;
    text-wrap: balance;
  }

  .title a {
    color: var(--textAccent);
    text-decoration: none;
    font-weight: var(--font-bolder);
    position: relative;
    z-index: 2;
    display: inline-block;
  }

  article img {
    background: var(--surfaceAccent);
  }

  article img.post-cover {
    display: block;
    border-radius: 5px;
    flex-shrink: 0;
    object-fit: cover;
    width: 120px;
    height: 120px;
    aspect-ratio: 1 / 1;
  }

  article time {
    font-size: 0.75rem;
  }

  article .abstract {
    font-size: 0.8rem;
    max-width: 50ch;
    text-wrap: balance;
    margin-top: 0.25rem;
    margin-bottom: 0.5rem;
    flex: 1;
  }

  article .category {
    font-size: 0.65rem;
    display: inline-block;
    color: inherit;
    font-weight: 400;
    position: relative;
    z-index: 2;
  }

  article .category:hover {
    color: var(--textAccent);
  }

  article .card-overlay {
    position: absolute;
    inset: 0;
    border-radius: inherit;
    z-index: 1;
  }

  @media screen and (width > 65rem) {
    article {
      flex-direction: column;
      border: 1px solid var(--surfaceAccent);
      border-radius: 8px;
      padding: 1rem;
    }
    article img.post-cover {
      width: 100%;
      height: auto;
      aspect-ratio: 3 / 2;
      max-width: 600px;
    }

    article:hover {
      border-color: var(--accent);
    }

    article .abstract {
      margin-top: 0.85rem;
    }
  }

  @media screen and (width > 80rem) {
    article img.post-cover {
      max-width: 500px;
    }
  }
</style>
