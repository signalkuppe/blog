---
import ThemeSwitcher from "./ThemeSwitcher/ThemeSwitcher.astro";
import Signature from "./Signature.astro";
const url = Astro.url.pathname;
const links = [
  {
    href: "/matteo",
    text: "Conosciamoci meglio",
    description: "Qualcosa in pi√π su di me e su cosa faccio",
  },
  {
    href: "https://signalkuppe.us17.list-manage.com/subscribe?u=c87438aa22d9c1bffb8b5e482&id=b177d839f1",
    text: "Newsletter",
    description: "Iscriviti per ricevere le ultime uscite pubblicate",
  },
  {
    href: "/rss.xml",
    text: "Feed Rss",
    description:
      "Iscriviti al mio feed RSS per ricevere gli ultimi aggiornamenti.",
  },
  {
    href: "https://github.com/signalkuppe",
    text: "Github",
    description: "Seguimi su Github",
  },
  {
    href: "https://www.instagram.com/signalkuppe/",
    text: "Instagram",
    description: "Il mio canale Instagram",
  },
  {
    href: "https://www.strava.com/athletes/9211798",
    text: "Strava",
    description: "Segui i miei allenamenti su Strava",
  },
];
---

<footer>
  <nav aria-label="Link secondari">
    <h2>Link utili</h2>
    <ul role="list">
      {
        links.map((link, i) => (
          <li>
            <a
              href={link.href}
              aria-current={url === link.href ? "page" : false}
              aria-describedby={`footer-link-${i + 1}`}
            >
              {link.text}
            </a>
            {link.description && (
              <p id={`footer-link-${i + 1}`}>{link.description}</p>
            )}
          </li>
        ))
      }
    </ul>
  </nav>

  <ThemeSwitcher class="theme-switcher" />

  <p class="copyright">
    2006 - <span id="js-year"></span>
    <b>signalkuppe.com.</b>
    <br />Contenuti pubblicati sotto licenza <a
      href=""
      rel="noreferrer"
      href="https://choosealicense.com/licenses/agpl-3.0/"
    >
      Gnu AGPLv3.</a
    ><br />
    <a href="#top" class="go-top">Torna in cima</a>
  </p>

  <Signature class="signature" />
</footer>
<!--css and scripts for theme switcher in layout's head tag to avoid fuoc -->
<style>
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  li {
  }

  ul p {
    color: var(--colorLight);
    font-size: 0.85rem;
    margin: 0;
  }

  .theme-switcher {
    padding: 4rem 0;
  }

  .copyright {
    margin-bottom: 3rem;
    font-size: 0.85rem;
  }

  .go-top {
    display: inline-block;
    margin-top: 1rem;
  }
  .signature {
    transform: translateX(-1rem);
    width: 150px;
  }
</style>

<script>
  document.getElementById("js-year").innerText = `${new Date().getFullYear()}`;
</script>
