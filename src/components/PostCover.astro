---
import { Image } from "astro:assets";

interface Props {
  cover: {
    src: ImageMetadata;
    alt: string;
  };
}

const { cover } = Astro.props;
---

<div class="cover">
  <Image
    src={cover.src}
    alt={cover.alt}
    widths={[1000, 1400, 2000, 4000]}
    quality={70}
    loading="eager"
    fetchpriority="high"
    class="cover-picture"
  />
  <p aria-hidden="true" class="caption">{cover.alt}</p>
</div>

<style media="screen">
  .cover {
    width: 100%;
    background: linear-gradient(-45deg, var(--surface), var(--surfaceAccent));
    background-size: 400% 400%;
    display: grid;
  }

  :global(.cover-picture) {
    display: grid;
    grid-area: 1/1;
  }

  img {
    object-fit: cover;
    width: 100%;
  }

  .cover,
  img {
    aspect-ratio: 4 / 3;
  }

  .caption {
    font-size: 1rem;
    grid-area: 1/1;
    z-index: 1;
    background: rgba(0, 0, 0, 0.7);
    color: var(--textAccent);
    padding: 0.25rem 0.85rem;
    place-self: end;
    font-weight: var(--font-bolder);
    background: var(--surface);
    transform: translate(-0.5rem, -0.5rem);
  }

  img.desktop {
    display: none;
  }

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    .cover {
      animation: gradient 2s ease infinite;
    }
  }

  @media screen and (width > 60rem) {
    .cover,
    img {
      aspect-ratio: 16 / 9;
    }
    .caption {
      font-size: 2rem;
      padding: 0.75rem 1.5rem;
      transform: translate(-1rem, -1rem);
    }
  }
</style>
