---
interface Props {
  post: any;
}
const { post } = Astro.props;
---

<picture>
  <source
    srcset={`${post.fields.cover.fields.file.url}?w=800&h=600&fit=thumb&q=70&fm=avif`}
    media="(max-width: 800px)"
  />
  <source
    srcset={`${post.fields.cover.fields.file.url}?w=1600&h=900&fit=thumb&q=70&fm=avif`}
    media="(max-width: 1280px)"
  />
  <img
    src={`${post.fields.cover.fields.file.url}?w=2560&h=1440&fit=thumb&q=70&fm=avif`}
    alt={post.fields.cover.fields.title || ""}
    loading="eager"
    decoding="async"
  />
</picture>
<p aria-hidden="true" class="caption">{post.fields.cover.fields.title}</p>

<style>
  picture {
    width: 100%;
    background: var(--surfaceAccent);
    background: linear-gradient(-45deg, var(--surface), var(--surfaceAccent));
    background-size: 400% 400%;
  }

  img {
    object-fit: cover;
    width: 100%;
  }

  picture,
  img {
    aspect-ratio: 4 / 3;
  }

  .caption {
    font-size: 0.85rem;
    margin-right: 1rem;
    margin-top: 0.5rem;
    color: var(--textAccent);
    font-weight: bold;
    display: flex;
    justify-content: flex-end;
  }

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    picture {
      animation: gradient 2s ease infinite;
    }
  }

  @media screen and (width > 60rem) {
    picture,
    img {
      aspect-ratio: 16 / 9;
    }
  }
</style>
