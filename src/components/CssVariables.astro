<style is:inline>
  :root {
    --dark: black;
    --darkLight: #222;
    --light: white;
    --lightDark: #eee;
    --accent: crimson;
  }
  html[data-theme="light"] {
    color-scheme: light;
    --background: var(--light);
    --color: var(--dark);
    --contrastBackground: var(--lightDark);
  }

  html[data-theme="dark"] {
    color-scheme: dark;
    --background: var(--dark);
    --color: var(--light);
    --contrastBackground: var(--darkLight);
  }

  @media (prefers-color-scheme: dark) {
    html:not([data-theme]) {
      color-scheme: dark;
      --background: var(--dark);
      --color: var(--light);
      --contrastBackground: var(--darkLight);
    }
  }
  html {
    background: var(--background);
    color: var(--color);
  }
</style>
