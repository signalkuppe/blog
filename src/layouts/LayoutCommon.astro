---
import ThemeSwitcherScript from "../components/ThemeSwitcher/ThemeSwitcherScript.astro";
import GlobalStyles from "../components/GlobalStyles.astro";
import PrintStyles from "../components/PrintStyles.astro";
import { prodSiteUrl } from "../constants";

const { title, description, ogImage, ogType, canonical } = Astro.props;
const canonicalURL = canonical || new URL(Astro.url.pathname, prodSiteUrl).href;
---

