{
  "name": "blog",
  "description": "Personal blog",
  "scripts": {
    "dev": "npm run build-cerca && npm run copy-cerca-assets && npx pequeno --serve --noAfterBuild",
    "dev-blog": "npx pequeno --serve --page=blog --path=/blog/index.html --data=posts --noAfterBuild",
    "dev-blog-category": "npx pequeno --serve --page=blog-by-category --path=/blog/alpinismo/index.html --data=posts --noAfterBuild",
    "dev-post": "npx pequeno --serve --page=post-item --path=/escursionismo/2021/10/17/pizzo-gandaiole/index.html --data=posts --noAfterBuild",
    "dev-post-photo": "npx pequeno --serve --page=post-photo --path=/scialpinismo/2022/03/03/norvegia-lofoten/tramonto-a-svolvaer-avoelpimvfl0i39stnahp/index.html --data=posts --noAfterBuild",
    "dev-portfolio": "npx pequeno --serve --page=portfolio --data=portfolio --noAfterBuild",
    "dev-portfolio-photo": "npx pequeno --serve --page=portfolio-photo --path=/portfolio/il-disgrazia-dalla-vetta-del-pizzo-scalino-3s1iwswsae0qwwek4bdv9j/index.html --data=portfolio --noAfterBuild",
    "dev-contatti": "npx pequeno --serve --page=contatti --noData --noAfterBuild",
    "dev-grazie": "npx pequeno --serve --page=grazie --noData --noAfterBuild",
    "dev-index": "npx pequeno --serve --page=index --noData --noAfterBuild",
    "dev-rss": "npx pequeno --page=post-item --data=posts",
    "dev-cerca": "npm run build-blog && npm run copy-posts-json && cd src/pages/cerca && npm run dev",
    "copy-posts-json": "mkdir -p ./src/pages/cerca/_data && cp .site/_data/posts.json ./src/pages/cerca/_data/posts.json",
    "copy-cerca-assets": "mkdir -p .site/assets && cp -R .site/cerca/assets .site",
    "build-cerca": "cd src/pages/cerca && npm run build",
    "build": "npm run lint && npx pequeno --clean && npm run build-cerca && npm run copy-cerca-assets",
    "build-verbose": "npx pequeno --clean --verbose",
    "build-blog": "npx pequeno --clean --page=blog --path=/blog/index.html --data=posts",
    "lint:js": "eslint --ext .jsx --ext .js .",
    "lint:css": "stylelint src/**/*.{js,jsx}",
    "lint": "npm run lint:js && npm run lint:css",
    "postinstall": "cd src/pages/cerca && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/signalkuppe/blog.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/signalkuppe/blog/issues"
  },
  "homepage": "https://www.signalkuppe.com",
  "devDependencies": {
    "@contentful/rich-text-html-renderer": "^14.1.2",
    "contentful": "^8.4.0",
    "dayjs": "^1.10.6",
    "eslint": "^7.29.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-webpack": "^0.13.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "jstoxml": "^3.2.3",
    "pequeno": "0.1.4",
    "postcss-styled": "^0.34.0",
    "sitemap": "^7.0.0",
    "slug": "^5.3.0",
    "stylelint": "^11.1.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0"
  },
  "dependencies": {
    "chart.js": "^3.4.1",
    "hammerjs": "^2.0.8",
    "leaflet": "^1.7.1",
    "leaflet-fullscreen": "^1.0.2",
    "leaflet-gesture-handling": "^1.2.1",
    "leaflet-gpx": "^1.5.2",
    "quicklink": "^2.2.0",
    "scrollama": "^3.1.0"
  }
}
