{
    "customSyntax": "postcss-styled-syntax",
    "extends": [
        "stylelint-config-recommended",
        "stylelint-config-styled-components"
    ],
    "rules": {
        "property-no-vendor-prefix": null,
        "media-query-no-invalid": null,
        "property-no-unknown": [
            true,
            {
                "ignoreProperties": [
                    "appareance",
                    "aspect-ratio",
                    "column-break-inside"
                ]
            }
        ]
    }
}
